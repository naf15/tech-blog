<div class="box" style="padding:3%; width: 100%">

    {{#each userPosts as |post|}}
    <div class="is-flex is-flex-direction-column is-justify-content-space-between is-align-content-space-between">
    <div class="box notification is-info" id="post-{{post.id}}" >
        <button class="delete delete-button" data-id="{{post.id}}"></button>
        <div class="is-flex is-flex-direction-column">
            <div class="is-flex is-justify-content-space-between">
                <strong>{{post.title}}</strong>{{post.date}}        
            </div>
        </div>
        <div class="is-flex is-justify-content-center">
            <form class="box" id="form-{{post.id}}" style="margin: 30px; background-color: #eef1a712; width: 80%; display: none">
                <h2 style="color:white">Edit Post:</h1>
                <div class="field">
                    <label class="label">Title</label>
                    <div class="control">
                    <input class="input" id="post-{{post.id}}-title" value="{{post.title}}" type="text" placeholder="e.g. Title of Post">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Content</label>
                    <div class="control">
                    <textarea class="textarea" id="post-{{post.id}}-content" style="margin-bottom:30px" placeholder="e.g. Hello world">{{post.content}}</textarea>
                    </div>
                </div>
                <button class="button is-danger">Submit</button>
            </form>
        </div>
    </div>
    <button class="button is-warning edit-button" style="margin-bottom: 30px; width:70px" data-id="{{post.id}}" data-form-id="form-{{post.id}}" data-edit-title="post-{{post.id}}-title" data-edit-content="post-{{post.id}}-content">Edit</button>
    {{!-- make form appear --}}
    </div>

    {{/each}}

    {{!-- NEW POST --}}

    <h1>New Post:</h1>
    <form class="box post-form">
        <div class="field">
            <label class="label">Title</label>
            <div class="control">
            <input class="input" id="post-title" type="text" placeholder="e.g. Title of Post">
            </div>
        </div>

        <div class="field">
            <label class="label">Content</label>
            <div class="control">
            <textarea class="textarea" id="post-content" style="margin-bottom:30px" placeholder="e.g. Hello world"></textarea>
            </div>
        </div>

        <button class="button is-danger">Submit</button>
    </form>
    <script src="./js/dashboard.js"></script>
</div>